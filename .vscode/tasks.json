{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "pnpm: dev",
      "type": "shell",
      "command": "cd apps/web && pnpm dev",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "ready in.*"
        }
      }
    },
    {
      "label": "go: dev",
      "type": "shell",
      "command": "cd apps/api && go run cmd/api/main.go",
      "isBackground": true,
      "problemMatcher": {
        "owner": "go",
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "Server started on.*"
        }
      }
    }
  ]
}
