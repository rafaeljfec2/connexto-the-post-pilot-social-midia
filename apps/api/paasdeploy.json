{
  "$schema": "https://raw.githubusercontent.com/rafaelcmd/connexto-vps-deploy-paas/main/paasdeploy.schema.json",
  "name": "the-post-pilot-api",
  "runtime": "go",
  "build": {
    "type": "dockerfile",
    "dockerfile": "./Dockerfile",
    "context": "."
  },
  "port": 3000,
  "hostPort": 3000,
  "healthcheck": {
    "path": "/the-post-pilot/v1/health",
    "interval": "30s",
    "timeout": "3s",
    "retries": 3,
    "startPeriod": "10s"
  },
  "env": {
    "TZ": "America/Sao_Paulo",
    "PORT": "3000",
    "HOST": "0.0.0.0"
  },
  "resources": {
    "memory": "256m",
    "cpu": "0.5"
  }
}
